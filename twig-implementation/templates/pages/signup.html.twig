{% extends "layout/base.html.twig" %}

{% block title %}Sign Up - TicketFlow{% endblock %}

{% block body %}
    <div class="auth-page">
        <div class="decorative-circle auth-circle-1"></div>
        <div class="decorative-circle auth-circle-2"></div>
        <div class="auth-card">
            <h1 class="auth-title">Create Account</h1>
            <p class="auth-subtitle">Start managing tickets today</p>
            <form id="signupForm" onsubmit="handleSignup(event)">
                <div class="form-group">
                    <label class="form-label">Full Name</label>
                    <input
                        type="text"
                        id="name"
                        class="form-input"
                        placeholder="John Doe"
                        required
                    />
                </div>
                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <input
                        type="email"
                        id="email"
                        class="form-input"
                        placeholder="you@example.com"
                        required
                    />
                </div>
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input
                        type="password"
                        id="password"
                        class="form-input"
                        placeholder="Create a password (min 6 characters)"
                        required
                    />
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
                    Create Account
                </button>
            </form>
            <div class="auth-link">
                Already have an account? <a href="/login.php">Login</a>
            </div>
        </div>
    </div>

    {% include 'layout/footer.html.twig' %}
{% endblock %}

{% block extra_js %}
<script>
    function handleSignup(event) {
        event.preventDefault();
        
        // Clear previous errors
        Validation.clearAllErrors('signupForm');
        
        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        
        let hasError = false;
        
        // Validate name
        if (!Validation.isRequired(name)) {
            Validation.showError('name', 'Name is required');
            hasError = true;
        }
        
        // Validate email
        if (!Validation.isRequired(email)) {
            Validation.showError('email', 'Email is required');
            hasError = true;
        } else if (!Validation.isValidEmail(email)) {
            Validation.showError('email', 'Email is invalid');
            hasError = true;
        }
        
        // Validate password
        if (!Validation.isRequired(password)) {
            Validation.showError('password', 'Password is required');
            hasError = true;
        } else if (!Validation.minLength(password, 6)) {
            Validation.showError('password', 'Password must be at least 6 characters');
            hasError = true;
        }
        
        if (hasError) return;
        
        // Attempt signup
        const result = Auth.signup(email, password, name);
        
        if (result.success) {
            Toast.show('Account created successfully! Welcome to TicketFlow.', 'success');
            setTimeout(() => {
                window.location.href = '/dashboard.php';
            }, 500);
        } else {
            Toast.show(result.error, 'error');
        }
    }
</script>
{% endblock %}